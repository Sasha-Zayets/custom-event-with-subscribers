{
    "compilerOptions": {
        "module": "ES2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "baseUrl": "./",
        "outDir": "./build",
        "pretty": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**", "**/*.spec.ts"]
}